<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TheMovieDBTT.Styles.Spacing">

    <!--Paddings-->
    <Thickness x:Key="NoPadding">0</Thickness>
    <Thickness x:Key="NormalPadding">10</Thickness>

    <!--Round-->
    <Thickness x:Key="NormalCornerRadius">5</Thickness>

    <!--Item spacing-->
    <x:Double x:Key="SmallSpacing">5</x:Double>
    <x:Double x:Key="NormalSpacing">10</x:Double>
    <x:Double x:Key="NegativeNormalSpacing">-10</x:Double>
</ResourceDictionary>
